<!DOCTYPE html>
<html>
  <head>
    <title>UhEm</title>
    <%= csrf_meta_tags %>

    <meta charset="utf-8">
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/images/apple-icon.png">
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Material Dashboard Pro by Creative Tim</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all'%>

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    <script src="/assets/jquery-3.1.1.min.js"></script>
    <script src="/assets/moment.min.js"></script>
    <%= javascript_include_tag 'application' %>
    <!-- bootstrap CDN -->
    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

    <!-- uh-em CSS -->
    <link rel="stylesheet" href="/assets/application.scss">

  </head>

  <body>

    <!-- banner start -->
    <div class="banner">
      <!-- nav -->
      <nav class="navbar navbar-toggleable-md
      navbar-light mx-5 px-5">
        <button class="navbar-toggler
        navbar-toggler-right bg-main"
        type="button" data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
          <div class="brand">
            <a class="navbar-brand" href="#">어-음?</a>
          </div>
      <div class="collapse navbar-collapse
      justify-content-end" id="navbarNav">
        <div class="row justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item px-4 active">
            <a class="nav-link" href="">SEARCH<span class="sr-only">(현재 페이지)</span></a>
          </li>
          <li class="nav-item px-4">
            <a class="nav-link" href="#">MY MENU</a>
          </li>
          <li class="nav-item px-4">
            <a class="nav-link" href="/users/sign_in">LOG-IN</a>
          </li>
          <li class="nav-item px-4">
            <a class="nav-link" href="/users/sign_in">SIGN-UP</a>
          </li>
        </ul>
        </div>
      </div>
      </nav>
      <!-- nav end -->
      <div class="row index-logo">
      <img src="/assets/0812index-logo.png" alt="index-logo">
      </div>

      <div class="buttons container">
      <div class="price row justify-content-center">

        <div class="price-1 row my-3">
          <label for="pricebottom" class="col-4 col-form-label my-auto">최저가</label>
          <div class="col-8 my-auto">
            <input class="price_low" type="number" value="0" id="priceLow">
          </div>
        </div>

        <div class="price-2 row my-3">
          <label for="pricetop" class="col-4 col-form-label my-auto">최고가</label>
          <div class="col-8 my-auto">
            <input class="price_top" type="number" value="0" id="priceTop">
          </div>
        </div>

        <div class="location row my-3">
          <!-- <label for="userlocation" class="col-4 col-form-label my-auto">당신의 위치</label> -->
          <div class="col-8 my-auto">
            <input class="user_location" type="text" placeholder="위치를 입력해주세요." id="userLocation">
          </div>


        </div>

        <div class="submitbutton">
          <button type="submit" class="btn">Submit</button>
        </div>

      </div>

      </div>

    </div>
  <!-- banner end -->

    <%= yield %>

    <!-- jquery CDN -->

    </script>


  </body>
</html>
