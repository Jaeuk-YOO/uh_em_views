<h1>리뷰를 써봅시다.</h1>

<table>
  <thead>
    <tr>
      <th>번호</th>
      <th>제목</th>
      <th>내용</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_posts.each do |review_post| %>
      <tr>
        <td><%= review_post.id %></td>
        <td><%= review_post.title %></td>
        <td><%= review_post.content %></td>
        <td><%= link_to 'Show', review_post %></td>
        <td><%= link_to 'Edit', edit_review_post_path(review_post) %></td>
        <td><%= link_to 'Destroy', review_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

